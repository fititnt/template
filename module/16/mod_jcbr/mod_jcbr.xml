<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6"
	client="administrator">
	<name>mod_jcbr</name>
	<author>Emerson Rocha Luiz</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) Joomla! Coders Brazil - @JCoderBR. All rights reserved.</copyright>
	<license>GNU General Public License version 3</license>
	<authorEmail>jcoderbr@gmail.com</authorEmail>
	<authorUrl>http://fititnt.org</authorUrl>
	<version>1.0</version>
	<description>MOD_JCBR_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_jcbr">mod_jcbr.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
                <folder>languages</folder><!-- This makes one copy of languages. Is not really necessary-->
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_jcbr.ini</language>
		<language tag="en-GB">en-GB.mod_jcbr.sys.ini</language>	
	</languages>

        <!--
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_CUSTOM_HTML" />
        -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="prepare_content"
					type="radio"
					label="MOD_CUSTOM_FIELD_PREPARE_CONTENT_LABEL"
					description="MOD_CUSTOM_FIELD_PREPARE_CONTENT_DESC"
					default="1">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
