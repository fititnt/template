<?xml version="1.0" encoding="UTF-8" ?>
<extension 
    type="library"
    version="1.7" 
    method="upgrade"
    >
    <!-- Name of folder inside of /libraries -->
    <libraryname>libexample</libraryname>
    <!-- Name of library -->
    <name>LIB_LIBEXAMPLE</name>
    <!-- Description of library -->
    <description>LIB_LIBEXAMPLE_DESCRIPTION</description>
    <creationDate>{createddate}</creationDate>
    <author>{author}</author>
    <authorEmail>{authoremail}</authorEmail>
    <authorUrl>{authorurl}</authorUrl>
    <copyright>{copyright}</copyright>
    <license>{license}</license>
    <version>1.0alpha</version>
    <packagerurl>{packagerurl}</packagerurl>
    <!-- 
    URL for look for updates
    <updateservers>{updateservers}</updateservers>        
    -->
    <files>
        <!-- Tag 'file' add a single file -->
        <file>libexample.php</file>
        <file>libexample.xml</file>
        <file>license.txt</file>
        <file>loader.php</file>
        <file>readme.txt</file>
        <!-- Tag 'folder' add a entire folder and all inside -->
        <folder>subpackage</folder>
        <!-- The 'language folder is not really need, but help on development -->
        <folder>language</folder>
    </files>
        <languages folder="language">
            <language tag="en-GB">en-GB/en-GB.lib_libexample.ini</language>
            <language tag="en-GB">en-GB/en-GB.lib_libexample.sys.ini</language>
        </languages>
</extension>
